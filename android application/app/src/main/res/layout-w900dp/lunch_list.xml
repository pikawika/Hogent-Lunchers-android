<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

    <android.support.constraint.Guideline
            android:id="@+id/guide_lunchlijst_35percent_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35"/>

    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_lunchlijst_35percent_vertical"

            android:layout_marginEnd="8dp">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/lunch_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            tools:listitem="@layout/lunch_list_content"
            app:layoutManager="LinearLayoutManager"
            />

    </android.support.v4.widget.SwipeRefreshLayout>

    <View
            android:id="@+id/divider_lunchlijst_45percent"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"

            app:layout_constraintEnd_toStartOf="@+id/guide_lunchlijst_35percent_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

    <FrameLayout
            android:id="@+id/lunch_detail_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/divider_lunchlijst_45percent"

            android:layout_marginStart="8dp"/>

    <include
            android:id="@+id/lunch_list_searchandfilter"
            layout="@layout/partial_search_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/guide_lunchlijst_35percent_vertical"
    />


</android.support.constraint.ConstraintLayout>