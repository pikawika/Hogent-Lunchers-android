<?xml version="1.0" encoding="utf-8"?>
<!-- A simple item for showing a blacklist name in recycler -->
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        app:cardElevation="5dp"
>

    <!-- Name with thrash cans -->
    <TextView
            android:id="@+id/text_item_blacklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:text="Een blacklist item"
            android:textSize="18sp"
            android:textAlignment="center"
            android:drawableStart="@drawable/ic_delete_forever_grey_24dp"
            android:drawableEnd="@drawable/ic_delete_forever_grey_24dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"

            android:paddingTop="10dp"
            android:paddingBottom="10dp"
    />

</android.support.v7.widget.CardView>
