<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="orderViewModel" type="hogent.be.lunchers.viewmodels.OrderViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/iv_order_detail_image"
                android:src="@{orderViewModel.selectedOrder.lunch.afbeeldingen[0].pad}"
                android:contentDescription="@string/description_order_list_content_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="H,16:9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/tv_order_detail_lunch_name"
                android:text="@{`Lunch: ` + orderViewModel.selectedOrder.lunch.naam}"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_order_detail_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/tv_order_detail_lunch_merchant"
                android:text="@{`Handelaar: ` + orderViewModel.selectedOrder.lunch.handelaar.handelsNaam}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:drawableStart="@drawable/ic_restaurant_menu_red_24dp"
                android:drawablePadding="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_order_detail_lunch_name"/>

        <TextView
                android:id="@+id/tv_order_detail_aantal"
                android:text="@{`Aantal: ` + orderViewModel.selectedOrder.aantal + ` personen`}"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:drawableStart="@drawable/ic_aantal_red_24dp"
                android:drawablePadding="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_order_detail_lunch_merchant"/>
        <TextView
                android:id="@+id/tv_order_detail_status"
                android:text="@{`Status: ` + orderViewModel.formatStatusSelectedOrder()}"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:textSize="18sp"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawablePadding="6dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_order_detail_aantal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/tv_order_detail_date"
                android:text="@{`Datum: ` + orderViewModel.formatDateSelectedOrder()}"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:textSize="18sp"
                android:drawableStart="@drawable/ic_date_range_black_24dp"
                android:drawablePadding="6dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_order_detail_status"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>