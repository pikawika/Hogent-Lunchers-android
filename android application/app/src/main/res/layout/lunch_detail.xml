<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/lunch_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.LunchDetailFragment">


    <ImageView
            android:id="@+id/imageview_lunch_detail_afbeelding"
            android:contentDescription="@string/lunch_afbeelding_beschrijving"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintDimensionRatio="H,16:9"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/wavanalles"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="@string/lunch_tekst_naam"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/textview_lunch_detail_naam"
            app:layout_constraintTop_toBottomOf="@+id/imageview_lunch_detail_afbeelding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/lunch_tekst_prijs"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_lunch_detail_prijs"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_lunch_detail_naam"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/lunch_tekst_beschrijving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_lunch_detail_beschrijving"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:paddingBottom="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_lunch_detail_prijs"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/textview_lunch_detail_restaurant_tekst"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_lunch_detail_restaurant"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_lunch_detail_beschrijving"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.012"
            android:drawableLeft="@drawable/ic_restaurant_black_24dp"
    />

    <TextView
            android:textColor="@android:color/black"
            android:text="@string/textview_lunch_locatie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_lunch_location_restaurant"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_lunch_detail_restaurant"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.011"
            android:drawableLeft="@drawable/ic_location_red_24dp"
    />


    <Button
            android:text="@string/button_lunch_detail_tekst"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_lunch_detail_reserveren"
            android:paddingStart="36dp"
            android:paddingEnd="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_lunch_location_restaurant"/>
    <Button
            android:text="@string/button_lunch_detail_tekst_bellen"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_lunch_detail_bellen"
            android:paddingStart="36dp"
            android:paddingEnd="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_lunch_detail_reserveren"
            app:layout_constraintVertical_bias="0.0"/>


</android.support.constraint.ConstraintLayout>