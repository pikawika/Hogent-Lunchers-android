<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/lunch_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragments.LunchDetailFragment">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="225dp"
            app:srcCompat="@drawable/wavanalles"
            android:scaleType="centerCrop"
            android:id="@+id/imageview_lunch_detail_afbeelding"
            android:contentDescription="@string/lunch_afbeelding_beschrijving"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    <TextView
            android:text="@string/lunch_tekst_naam"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/textview_lunch_detail_naam"
            app:layout_constraintTop_toBottomOf="@+id/imageview_lunch_detail_afbeelding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/lunch_tekst_prijs"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_lunch_detail_prijs"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_lunch_detail_naam"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/lunch_tekst_beschrijving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_lunch_detail_beschrijving"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:paddingBottom="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_lunch_detail_prijs"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/textview_lunch_detail_restaurant_tekst"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_lunch_detail_restaurant"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textview_lunch_detail_beschrijving"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.012"/>
    <Button
            android:text="@string/button_lunch_detail_tekst"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_lunch_detail_reserveren"
            android:paddingStart="36dp"
            android:paddingEnd="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.502" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/navigationTemp"/>

    <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigationTemp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation"/>

</android.support.constraint.ConstraintLayout>